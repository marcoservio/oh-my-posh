{
    "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
    "blocks": [
        {
            "alignment": "right",
            "segments": [
                {
                    "foreground": "#f14545",
                    "style": "plain",
                    "template": "{{ .Name }}",
                    "type": "shell"
                },
                {
                    "foreground": "#26C6DA",
                    "properties": {
                        "time_format": "15:04:05"
                    },
                    "style": "plain",
                    "template": " <#ffffff,>|</> {{ .CurrentDate | date .Format }}",
                    "type": "time"
                }
            ],
            "type": "prompt"
        },
        {
            "alignment": "left",
            "newline": true,
            "segments": [
                {
                    "foreground": "#26C6DA",
                    "style": "plain",
                    "template": "{{.Icon}} ",
                    "type": "os"
                },
                {
                    "foreground": "#4550f1",
                    "style": "plain",
                    "template": "(<#f14545>{{ .UserName }} </><#ffffff>\u26A1</><#f14545>{{ .HostName }}</>)",
                    "type": "session"
                },
                {
                    "foreground": "#4550f1",
                    "properties": {
                        "folder_separator_icon": "/",
                        "style": "full"
                    },
                    "style": "plain",
                    "template": " <#26C6DA></> [<#ffffff>{{ .Path }}</>] ",
                    "type": "path"
                },
                {
                    "foreground": "#26C6DA",
                    "powerline_symbol": "",
                    "properties": {
                        "fetch_stash_count": true,
                        "fetch_upstream_icon": true
                    },
                    "style": "plain",
                    "template": "{{ .UpstreamIcon }}{{ .HEAD }}{{ if gt .StashCount 0 }}  {{ .StashCount }}{{ end }} ",
                    "type": "git"
                }
            ],
            "type": "prompt"
        },
        {
            "alignment": "left",
            "newline": true,
            "segments": [
                {
                    "foreground": "#cd5e42",
                    "style": "plain",
                    "template": " ",
                    "type": "root"
                },
                {
                    "foreground": "#CD4277",
                    "style": "plain",
                    "template": "<#66CDAA>\u276f</><#26C6DA>\u276f</><#4550f1>\u276f</> ",
                    "type": "text"
                }
            ],
            "type": "prompt"
        }
    ],
    "version": 2
}
